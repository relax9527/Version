<?xml version="1.0" encoding="utf-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xushouwei.bean.User">
	
	<resultMap type="com.xushouwei.bean.User" id="userResult">
		<result property="id" column="id" jdbcType="INTEGER" javaType="java.lang.Integer"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
	</resultMap>
	
	<select id="userLogin" parameterType="user" resultMap="userResult">
		select * from user where username=#{username} and password=#{password}
	</select>
	
	<select id="selectAllUser" resultMap="userResult">
		select * from user
	</select>
	
	<select id="findUserById" parameterType="int" resultMap="userResult">
		select * from user where id=#{id}
	</select>
	
	<insert id="insertUser" parameterType="user">
		<![CDATA[ 
        insert into 
        user(username,password) values(#{username},#{password}) 
        ]]>
	</insert>
	
	<update id="updateUser" parameterType="user">
		update user set username=#{username},password=#{password} where id=#{id}
	</update>
	
	<delete id="deleteUser" parameterType="int">
		delete from user where id=#{id}
	</delete>
</mapper>